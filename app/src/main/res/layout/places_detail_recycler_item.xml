<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/placeNameTv"
        android:textSize="16dp"
        android:layout_toLeftOf="@id/locateInMapBt"
        android:layout_toStartOf="@id/locateInMapBt"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locateInMapBt"
        android:text="Locate"
        android:textAllCaps="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/placeAddressTv"
        android:layout_below="@id/placeNameTv"
        android:layout_toLeftOf="@id/locateInMapBt"
        android:layout_toStartOf="@id/locateInMapBt"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/placeLatLongTv"
        android:layout_below="@id/placeAddressTv"
        android:layout_marginTop="5dp"
        app:drawableStartCompat="@drawable/ic_baseline_place_24"
        app:drawableLeftCompat="@drawable/ic_baseline_place_24" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/placeLatLongTv"
        android:layout_marginTop="5dp"
        android:background="@color/black"/>


</RelativeLayout>